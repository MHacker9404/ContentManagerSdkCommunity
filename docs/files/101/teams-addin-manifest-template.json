{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.11/MicrosoftTeams.schema.json",
    "manifestVersion": "1.11",
    "version": "0.1.0",
    "showLoadingIndicator": true,
    "id": "[MANIFESTGUID]",
    "packageName": "com.microfocus.contentmanager",
    "developer": {
        "name": "MicroFocus",
        "websiteUrl": "https://www.microfocus.com",
        "privacyUrl": "https://www.microfocus.com",
        "termsOfUseUrl": "https://www.microfocus.com"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Content Manager",
        "full": "Content Manager"
    },
    "description": {
        "short": "Content Manager",
        "full": "Content Manager"
    },
    "accentColor": "#FFFFFF",
    "configurableTabs": [
        {
            "configurationUrl": "[SERVICEAPIURL]/office/index.html?teamsconfig=1",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ],
            "context": [
                "channelTab",
                "privateChatTab"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "ContentManagerAdmin",
            "name": "Content Manager Admin",
            "contentUrl": "[SERVICEAPIURL]/office/index.html?teamsadmin=1",     
			[WEBSITEURLATTR]	
            "scopes": [
                "personal"
            ]

        },
        {
            "entityId": "about",
            "scopes": [
                "personal"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "[DOMAIN]"
    ],
    "webApplicationInfo": {
        "id": "[APPCLIENTID]",
        "resource": "[APPIDURI]"
    }
}